<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:fadeScrollbars="true"
    tools:context="id.or.codelabs.workshoplayout.MenuUtama">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_codelabs"/>
    <Button
        android:id="@+id/button_linear"
        android:onClick="clickButtonLinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_linear_layout"/>

    <Button
        android:id="@+id/button_relative"
        android:onClick="clickButtonRelative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_relative_layout"/>

    <Button
        android:id="@+id/button_frame"
        android:onClick="clickButtonFrame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_frame_layout"/>

    <Button
        android:id="@+id/button_absolute"
        android:onClick="clickButtonAbsolute"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_absolute_layout"/>

</LinearLayout>
